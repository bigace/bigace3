                <td>
                    <img src="<?php echo $this->STYLE; ?>languages/<?php echo $item->getLanguageID(); ?>.gif" style="margin-right:10px" />
                    <a href="<?php echo $result['edit']; ?>" class="edit"><?php echo $item->getName(); ?></a>
