    echo $this->portletHeader($this->TITLE . ' - ' . $this->t('item_'.$this->ITEMTYPE), array('full' => true));
    
    if(count($this->ITEMS) > 0) { ?>
    <table class="nicetable" width="100%" cellspacing="0">
        <col />
        <col width="150" />
        <tbody>
        <?php 
